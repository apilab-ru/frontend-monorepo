{
  "manifest_version": 2,
  "name": "WatchList",
  "version": "1.4",
  "description": "This extension allows you control your library",
  "icons": {
    "48": "wish-list-icon.png"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com 'unsafe-eval'; object-src 'self';",
  "browser_action": {
    "default_title": "File cabinet",
    "default_icon": "wish-list-icon.png",
    "default_popup": "popup/index.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "bookmarks",
    "http://*/*",
    "https://*/*"
  ]
}
