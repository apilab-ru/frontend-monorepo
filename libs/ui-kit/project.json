{
  "name": "ui-kit",
  "projectType": "library",
  "sourceRoot": "libs/ui-kit/src",
  "prefix": "ui",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "libs/ui-kit/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-kit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui-kit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "ui-kit/tsconfig.spec.json",
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ]
      }
    },

    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "browserTarget": "ui-kit:build-storybook",
        "port": 6010,
        "configDir": "libs/ui-kit/.storybook",
        "tsConfig": "libs/ui-kit/.storybook/tsconfig.json",
        "styles": [
          "libs/ui-kit/.storybook/global.scss"
        ],
        "compodoc": false
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "browserTarget": "ui-kit:build",
        "configDir": "libs/ui-kit/.storybook",
        "tsConfig": "libs/ui-kit/.storybook/tsconfig.json",
        "styles": [
          "libs/ui-kit/.storybook/global.scss"
        ],
        "outputDir": "libs/ui-kit/.storybook/dist",
        "compodoc": false
      }
    }
  }
}
